<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Update Your Thoughts</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead">Share your amazing thoughts with thousands of cat lovers accross the world. Fill our form to get started.</p>
    </div>
  </div>
  
  <div class="row justify-content-center">
  
    <% if(infoSubmitObj != '') { %>
      <div class="col-8 alert alert-success" role="alert">
        <%= infoSubmitObj %>
      </div>
    <% } %>
  
    <% if(infoErrorsObj != '') { %>
      <div class="col-8 alert alert-danger" role="alert">
        <%= infoErrorsObj[0].message %>
      </div>
    <% } %>
  
    <div class="col-8">
  
      <form action="/edit-thoughts/<%= thoughts._id %>" enctype="multipart/form-data" method="POST">
      
        <div class="row g-3">
  
          <div class="col-12">
            <label for="newname" class="form-label">Thought Title</label>
            <input type="text" placeholder="<%= thoughts.name %>" name="newname" id="newname" class="form-control" required>
          </div>
          
          <div class="col-12">
            <label for="newdescription" class="form-label">Description</label>
            <textarea name="newdescription" placeholder="<%= thoughts.description %>" id="newdescription" class="form-control" cols="30" rows="4"></textarea>
          </div>
  
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Update Thoughts</button>
          </div>
  
        </div>
      
      </form>
  
    </div>
  </div>